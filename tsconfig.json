{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": "./src",
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*",
        "./src/types/**/*.d.ts",
        "./.eslintrc.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}